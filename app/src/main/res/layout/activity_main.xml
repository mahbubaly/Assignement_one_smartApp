<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#D5927D"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@drawable/mine">

    </ImageView>

    <TextView
        android:id="@+id/text_ViewOne"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="I'm Mahbubur Rahman Mahbub, a dedicated and professional web designer with expertise in HTML, CSS, Bootstrap, JavaScript, jQuery, React.js, Vue.js, and more. With over two years of experience in frontend development and a passion for creating stunning web applications, I've successfully completed numerous projects for satisfied clients.

">

    </TextView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
        android:id="@+id/btnPrevious"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:text="Previous"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="220dp"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        />
    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="Next"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        />
</LinearLayout>

</LinearLayout>
